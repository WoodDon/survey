<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dong.survey.MainActivity">

    <Button
        android:text="next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_next5"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_bright" />

    <TextView
        android:text="Where are you from?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:text="Sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/radioButton5_1"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/button_next5"
        android:layout_toStartOf="@+id/button_next5" />

    <RadioButton
        android:text="Mars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5_2"
        android:layout_below="@+id/radioButton5_1"
        android:layout_alignLeft="@+id/radioButton5_1"
        android:layout_alignStart="@+id/radioButton5_1" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5_3"
        android:text="Earth"
        android:layout_below="@+id/radioButton5_2"
        android:layout_alignLeft="@+id/radioButton5_2"
        android:layout_alignStart="@+id/radioButton5_2" />

    <RadioButton
        android:text="Moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RadioButton5_4"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/radioButton5_3"
        android:layout_alignStart="@+id/radioButton5_3" />
</RelativeLayout>
