<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dong.survey.MainActivity">

    <TextView
        android:text="Okay, then can you tell me your gender?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <Button
        android:text="next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_next3"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_orange_light" />

    <RadioButton
        android:text="woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3_3"
        android:layout_below="@+id/radioButton3_2"
        android:layout_alignLeft="@+id/radioButton3_2"
        android:layout_alignStart="@+id/radioButton3_2" />

    <RadioButton
        android:text="female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3_2"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/radioButton3_1"
        android:layout_alignLeft="@+id/radioButton3_1"
        android:layout_alignStart="@+id/radioButton3_1" />

    <RadioButton
        android:text="I don't know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton3_3"
        android:layout_toLeftOf="@+id/button_next3"
        android:layout_toStartOf="@+id/button_next3"
        android:id="@+id/radioButton3_4" />

    <RadioButton
        android:text="girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3_1"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/radioButton3_4"
        android:layout_alignStart="@+id/radioButton3_4" />

</RelativeLayout>
